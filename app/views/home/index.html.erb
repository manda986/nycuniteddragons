<!-- Carousel
 ================================================== -->
 <div id="myCarousel" class="carousel slide">
   <!-- Indicators -->
   <ol class="carousel-indicators">
     <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
     <li data-target="#myCarousel" data-slide-to="1"></li>
     <li data-target="#myCarousel" data-slide-to="2"></li>
   </ol>
   <div class="carousel-inner">
     <div class="item active">
       <%= image_tag "rhode_island_engine.jpg" %>
       <div class="container">
         <div class="carousel-caption">
           <h1>NYC United Dragons</h1>
           <p>The alliance of elite paddlers across various clubs to form a premier Dragonboat crew to proudly represent NYC.</p>
           <p><%= link_to "Read Who We Are", about_path + "#who-we-are", :class => "btn btn-large btn-primary" %></p>
         </div>
       </div>
     </div>
     <div class="item">
       <%= image_tag "kevin_and_tony_race.jpg" %>
       <div class="container">
         <div class="carousel-caption">
           <h1>Be the best paddler you can be</h1>
           <p>Gain access to our outrigger canoes and dragonboat for free</p>
         </div>
       </div>
     </div>
     <div class="item">
       <%= image_tag "mercer_awards.jpg" %>
       <div class="container">
         <div class="carousel-caption">
           <h1>Ready to jump in?</h1>
           <p>Tryouts run all year long using outrigger canoes and ERG machines</p>
           <p><%= link_to "See our Schedule", schedule_path, :class => "btn btn-large btn-primary" %></p>
         </div>
       </div>
     </div>
   </div>
   <a class="left carousel-control" href="#myCarousel" data-slide="prev">
     <span class="glyphicon glyphicon-chevron-left"></span>
   </a>
   <a class="right carousel-control" href="#myCarousel" data-slide="next"><span class="glyphicon glyphicon-chevron-right white"></span></a>
 </div><!-- /.carousel -->

